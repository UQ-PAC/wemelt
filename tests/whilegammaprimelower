_global var z:
_L: TRUE
_R_var: (TRUE, z' == z)
_G_var: (TRUE, z' >= z)

_global var x:
_L_R: TRUE
_L_G: z % 2 == 0

_local var secret

_P_inv: TRUE
_P_0: z % 2 == 0
_Gamma_0: secret -> FALSE

while(TRUE)
_invariant: z % 2 == 0
_Gamma: z -> TRUE, x -> TRUE, secret -> TRUE
{
    z = z + 1;
    fence;
    x = secret;
    x = 0;
    fence;
    z = z + 1;
}


