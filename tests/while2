_var z:
_L: TRUE
_Mode: NoW

_var x:
_L: z % 2 == 0
_Mode: NoW

_var r_secret:
_L: FALSE

_P_0: z % 2 == 0
_Gamma_0: x == LOW, r_secret == HIGH

while(TRUE) // should fail - WHILE rule - loop invariant is not weaker than previous P
_invariant: z == 0
_Gamma: x == LOW, r_secret == HIGH
{
  z = z + 1;
  fence;
  x = r_secret;
  x = 0;
  fence;
  z = z + 1;
}
