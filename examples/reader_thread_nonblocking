_var r1:
_L: TRUE

_var r2:
_L: FALSE

_var x:
_L: z % 2 == 0
_Mode: RW

_var z:
_L: TRUE
_Mode: RW

_var y:
_L: TRUE
_Mode: RW

_Gamma_0: r1 -> LOW, r2 -> HIGH

while(TRUE)
_invariant: TRUE
_Gamma: r1 -> LOW, r2 -> HIGH
{
  do
  _invariant: TRUE
  _Gamma: r1 -> LOW, r2 -> HIGH, z -> LOW
  _Stable: z
  {
    do
    _invariant: TRUE
    _Gamma: r1 -> LOW, r2 -> HIGH, z -> LOW
    {
      r1 = z;
    } while ((r1 % 2) != 0)
    fence;
    r2 = x;
    fence;
  } while (z != r1)
  y = r2;
}
