_var z:
_L: TRUE
_Mode: NoW

_array x[5]:
_L: z % 2 == 0
_Mode: NoW

_var r_secret:
_L: FALSE

_P_0: z % 2 == 0
_Gamma_0: x[1] -> LOW, x[2] -> LOW, x[3] -> LOW, x[4] -> LOW, x[0] -> LOW, r_secret -> HIGH

while(TRUE) 
_invariant: z % 2 == 0
_Gamma: x[1] -> LOW, x[2] -> LOW, x[3] -> LOW, x[4] -> LOW, x[0] -> LOW, r_secret -> HIGH
{
z = z + 1;
fence;
x[((z + 1) / 2) % 5] = r_secret;
x[((z + 1) / 2) % 5] = 0;
//fence;
z = z + 1;
}
