_global var z:
_L: TRUE
_R_var: (TRUE, z' >= z)

_global var x:
_L_R: z % 2 == 0
_L_G: TRUE

_global var low_out:
_L: TRUE

_local var r1
_local var r2

_P_inv: TRUE
_G: z' == z
_P_0: r1 % 2 == 0

do
_invariant: TRUE
_Gamma: r1 -> TRUE, r2 -> TRUE, low_out -> TRUE, z -> TRUE
{
    do
    _invariant: TRUE
    _Gamma: r1 -> TRUE, r2 -> TRUE, low_out -> TRUE, z -> TRUE
    {
        r1 = z;
    } while ((r1 % 2) != 0)
    r2 = x;
} while (z != r1)
low_out = r2;